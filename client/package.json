{
  "name": "multivox",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/cli": "^4.0.8",
    "jotai": "^2.12.1",
    "jotai-devtools": "^0.11.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^7.2.0",
    "tailwindcss": "^4.0.8"
  },
  "type": "module",
  "devDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.20",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.0-beta.8",
    "esbuild": "^0.25.0",
    "esbuild-plugin-manifest": "^1.0.5",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build:ts": "NODE_ENV=production node build.js",
    "build:ts:watch": "node build.js --watch",
    "build": "pnpm run build:ts",
    "typecheck": "tsc --noEmit",
    "server": "cd ../server && uv run uvicorn multivox.app:app --reload --workers 1 --limit-concurrency 100 --backlog 512 --timeout-keep-alive 60",
    "dev-server": "concurrently \"pnpm run build:ts:watch\" \"pnpm run server\" \"open http://localhost:8000\""
  }
}